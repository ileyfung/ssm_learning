<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	namespace一般指定为当前文件的所在包路径+文件名（将来是接口名）
	在程序中通过[ namespace + id ]定位到执行哪一条SQL语句
 -->
<mapper namespace="com.lifeng1.dao.DoorMapper">
    <!--根据id更新门店信息-->
    <update id="doorUpdate">
        update tb_door set name=#{name},tel=#{tel},addr=#{addr} where id=#{id}
    </update>
    <!--根据id查询门店-->
    <select id="doorInfo" resultType="com.lifeng1.pojo.Door">
        select * from tb_door where id=#{id}
    </select>
    <!--删除门店-->
    <update id="doorDelete">
        delete from tb_door where id=#{id}
    </update>
    <!--新增门店-->
    <update id="doorAdd" parameterType="com.lifeng1.pojo.Door">
        insert into tb_door values (null,#{name},#{tel},#{addr})
    </update>
    <!--查询所有门店-->
    <select id="findAll" resultType="com.lifeng1.pojo.Door">
        select * from tb_door
    </select>

</mapper>
